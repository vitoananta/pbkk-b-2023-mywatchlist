@page
@model MyWatchlist.Pages.Symbols.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Search by (Instrument): <select asp-for="SymbolInstrument" asp-items="Model.Instruments">
            <option value="">All</option>
        </select>

        Symbol: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Symbol[0].SymbolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol[0].Instrument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol[0].EntryPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol[0].ExitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Symbol) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SymbolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
